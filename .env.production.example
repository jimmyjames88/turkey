# TurKey Auth API - Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# JWT Configuration
JWT_ISSUER=https://auth.yourdomain.com
JWT_AUDIENCE=your-application-name
JWT_KEY_ID=your-key-id

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BRUTE_FORCE_WINDOW_MS=900000
BRUTE_FORCE_MAX_ATTEMPTS=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
DB_HEALTH_CHECK=true

# Graceful Shutdown Configuration
SHUTDOWN_TIMEOUT=10000

# Database Connection Pool (Optional - defaults provided)
# DB_MAX_CONNECTIONS=20
# DB_MIN_CONNECTIONS=5
# DB_ACQUIRE_TIMEOUT_MS=60000
# DB_IDLE_TIMEOUT_MS=10000
# DB_CONNECTION_TIMEOUT_MS=2000
# DB_RETRY_ATTEMPTS=3
# DB_RETRY_DELAY_MS=1000

# Request Size Limits (Optional - defaults provided)
# MAX_REQUEST_SIZE=10mb
# MAX_JSON_SIZE=1mb
# MAX_URL_ENCODED_SIZE=1mb