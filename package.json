{
  "name": "turkey",
  "version": "1.0.0",
  "description": "JWT Authentication API with JWKS and refresh token rotation",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint src/**/*.ts cli/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts cli/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test:integration": "NODE_ENV=test ts-node tests/integration/index.ts",
    "clean": "rimraf dist",
    "gravy": "ts-node cli/gravy.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "jose": "^5.2.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.3",
    "tsconfig-paths": "^4.2.0",
    "validator": "^13.15.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jimmyjames88/eslint-config": "^1.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.20",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.11.0",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "drizzle-kit": "^0.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "esbuild": "^0.25.10"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings=100",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
